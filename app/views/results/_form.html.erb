<%= simple_form_for @result, :html => { :class => 'form-horizontal' } do |f| %>

<%= f.error_notification %>
<%= display_base_errors @result %>

<%= f.association :answer %>
<%= f.association :question %>
<%= f.association :team %>
<%= f.input :ok, :as => :boolean %>
<div class="form-actions">

<%= f.submit "guardar", :class => 'btn btn-primary' %>
<%= link_to 'Atras', results_path, :class => 'btn btn-small' %>
</div>
<% end %>
