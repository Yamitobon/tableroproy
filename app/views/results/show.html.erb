<%- model_class = Result -%>
<div class="page-header">
  <h1>Nuevo Resultado</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Respuesta) %>:</strong></dt>
  <dd><%= @result.answer.answer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Pregunta) %>:</strong></dt>
  <dd><%= @result.question.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Equipo) %>:</strong></dt>
  <dd><%= @result.team.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Ok) %>:</strong></dt>
  <dd><%= @result.ok %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.atras', :default => t("helpers.links.Atras")),
              results_path, :class => 'btn'  %>
  <%= link_to t('.editar', :default => t("helpers.links.editar")),
              edit_result_path(@result), :class => 'btn' %>
  <%= link_to t('.eliminar', :default => t("helpers.links.Eliminar")),
              result_path(@result),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta Seguro?')) },
              :class => 'btn btn-danger' %>
</div>
