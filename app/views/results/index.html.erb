<%- model_class = Result -%>
<div class="page-header">
  <h1>Resultados</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Respuesta) %></th>
      <th><%= model_class.human_attribute_name(:Pregunta) %></th>
      <th><%= model_class.human_attribute_name(:Equipo) %></th>
      <th><%= model_class.human_attribute_name(:Ok) %></th>
      <th><%=t '.acciones', :default => t("helpers.Acciones") %></th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= link_to result.id, result_path(result) %></td>
        <td><%= result.answer.answer %></td>
        <td><%= result.question.description %></td>
        <td><%= result.team.name %></td>
        <td><%= result.ok %></td>
        <td>
          <%= link_to t('.Editar', :default => t("helpers.links.editar")),
                      edit_result_path(result), :class => 'btn btn-mini' %>
          <%= link_to t('.Eliminar', :default => t("helpers.links.Eliminar")),
                      result_path(result),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta Seguro?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.Nuevo Resultado")),
            new_result_path,
            :class => 'btn btn-primary' %>
