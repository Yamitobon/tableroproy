<%- model_class = Answer -%>
<div class="page-header">
  <h1>Nueva Respuesta</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Respuesta) %>:</strong></dt>
  <dd><%= @answer.answer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Letra) %>:</strong></dt>
  <dd><%= @answer.letter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Pregunta) %>:</strong></dt>
  <dd><%= @answer.question.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.atras', :default => t("helpers.links.Atras")),
              answers_path, :class => 'btn'  %>
  <%= link_to t('.editar', :default => t("helpers.links.editar")),
              edit_answer_path(@answer), :class => 'btn' %>
  <%= link_to t('.eliminar', :default => t("helpers.links.Eliminar")),
              answer_path(@answer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta Seguro?')) },
              :class => 'btn btn-danger' %>
</div>
