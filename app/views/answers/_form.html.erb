<%= simple_form_for @answer, :html => { :class => 'form-horizontal' } do |f| %>

<%= f.error_notification %>
<%= display_base_errors @answer %>

<%= f.input :answer, :as => :text %>
<%= f.input :letter, :label => "Letra" %>
<%= f.association :question, :label => "Pregunta", :required => true  %>
<div class="form-actions">
<%= f.submit "guardar", :class => 'btn btn-primary' %>
<%= link_to 'Atras', answers_path, :class => 'btn btn-small' %>
</div>
<% end %>
