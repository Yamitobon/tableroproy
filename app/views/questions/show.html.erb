<%- model_class = Question -%>
<div class="page-header">
  <h1>Nueva Pregunta</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:DescripciÃ³n) %>:</strong></dt>
  <dd><%= @question.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Puntaje) %>:</strong></dt>
  <dd><%= @question.score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Letra) %>:</strong></dt>
