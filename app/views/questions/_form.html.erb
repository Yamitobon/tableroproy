<%= simple_form_for @question, :html => { :class => 'form-horizontal' } do |f| %>

<%= f.error_notification %>
<%= display_base_errors @question %>

<%= f.input :description, :as => :text %>
<%= f.input :score, :label => "Puntaje" %>
<%= f.input :letter, :label => "Letra" %>
<%= f.association :category, :label => "Categoria", :required => true  %>
<div class="form-actions">

<%= f.submit "guardar", :class => 'btn btn-primary' %>
<%= link_to 'Atras', questions_path, :class => 'btn btn-small' %>
</div>
<% end %>
