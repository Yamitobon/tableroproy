<%- model_class = User -%>
<div class="page-header">
  <h1>Nuevo Usuario</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Rol) %>:</strong></dt>
  <dd><%= @user.rol %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Nombre) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ContraseÃ±a) %>:</strong></dt>
  <dd><%= @user.password %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.atras', :default => t("helpers.links.Atras")),
              users_path, :class => 'btn'  %>
  <%= link_to t('.editar', :default => t("helpers.links.editar")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.eliminar', :default => t("helpers.links.Eliminar")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta Seguro?')) },
              :class => 'btn btn-danger' %>
</div>
