<%- model_class = Winner -%>
<div class="page-header">
  <h1>Ganadores</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Nombre_del_Equipo) %></th>
      <th><%= model_class.human_attribute_name(:Miembro_del_Equipo) %></th>
      <th><%= model_class.human_attribute_name(:Puntaje) %></th>
      <th><%= model_class.human_attribute_name(:Fecha) %></th>
    </tr>
  </thead>
  <tbody>
    <% @winners.each do |winner| %>
      <tr>
        <td><%= link_to winner.id, winner_path(winner) %></td>
        <td><%= winner.nameteam %></td>
        <td><%= winner.namemember %></td>
        <td><%= winner.score %></td>
        <td><%= winner.dategame %></td>
        <td>
          <%= link_to t('.Editar', :default => t("helpers.links.editar")),
                      edit_winner_path(winner), :class => 'btn btn-mini' %>
          <%= link_to t('.Eliminar', :default => t("helpers.links.Eliminar")),
                      winner_path(winner),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta Seguro?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.Ganadores")),
            new_winner_path,
            :class => 'btn btn-primary' %>
